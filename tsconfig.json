{
	"compilerOptions": {
		"target": "ES2020",
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "lib",
		"rootDir": "src",
		"sourceMap": true,
		"declaration": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"skipDefaultLibCheck": true,
	},
	"include": ["src/**/*"],
}
